{
  "name": "techradar",
  "displayName": "Tech radar",
  "version": "0.0.1",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "test": "jest",
    "lerna": "lerna",
    "lint": "tslint './packages/**/src/*.{ts,tsx}'",
    "watch": "lerna run watch --parallel",
    "start": "lerna run start --parallel"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,scss,css,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "husky": "^1.1.3",
    "jest": "^23.6.0",
    "lerna": "^3.4.3",
    "lint-staged": "^8.0.4",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.2.2"
  }
}
